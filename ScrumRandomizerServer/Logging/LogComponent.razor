@if (LogEntry != null)
{
    <TableRow>
        <TableRowHeader>@Row</TableRowHeader>
        <TableRowCell>@LogEntry.Timestamp.ToLocalTime()</TableRowCell>
        <TableRowCell>@LogEntry.RenderedMessage</TableRowCell>
        <TableRowCell>@LogEntry.Level</TableRowCell>
    </TableRow>
}


@code {
    [Parameter]
    public ILogEntry LogEntry { get; set; }

    [Parameter]
    public int Row { get; set; }
}